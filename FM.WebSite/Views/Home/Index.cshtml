@using FM.WebSite.Models.Account
@model UserLoginViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Frost Tech</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-wrap: wrap;
        }

        .welcome-text {
            text-align: center;
            max-width: 600px;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin-left: auto;
        }

        .welcome-text ul {
            padding-left: 20px; /* Indent the list */
            list-style-type: disc; /* Ensure bullets are shown */
            text-align: left; /* Align text to the left within the list */
        }

            .welcome-text ul li {
                word-wrap: break-word; /* Ensure long words wrap within the list item */
                white-space: normal; /* Allow normal line breaks */
                line-height: 1.5; /* Improve readability */
                color: white;
            }
    </style>
</head>
<body>
   
        <div class="container-fluid">
            <div class="row center-content">
                <!-- Centered Welcome Message -->
                <div class="col-md-6 welcome-text">
                    <h1 class="text-white">Welcome to Frost Tech</h1>
                <p class="text-white">Where we:</p>
                    <ul>
                        <li>Sell,</li>
                        <li>Maintain,</li>
                        <li>& Fix fridges for our customers to ensure refrigeration of their beverages.</li>
                    </ul>
                </div>

                <!-- Login Form on the Right -->
                <div class="col-md-4 offset-md-2">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title text-center">Login</h4>
                            <form asp-action="Login" method="post">
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-control" id="email" name="Email" required>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password:</label>
                                    <input type="password" class="form-control" id="password" name="Password" required>
                                </div>
                                <div class="form-group text-center">
                                    <a href="#">Forgot password?</a>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   
</body>
    
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
